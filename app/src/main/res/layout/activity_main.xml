<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <fragment android:name="com.example.streetrats.genie.LoginFragment"
        android:id="@+id/loginFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <fragment android:name="com.example.streetrats.genie.ProfileFragment"
        android:id="@+id/profileFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <fragment android:name="com.example.streetrats.genie.AddItemFragment"
        android:id="@+id/addItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <fragment android:name="com.example.streetrats.genie.ItemFragment"
        android:id="@+id/itemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <fragment android:name="com.example.streetrats.genie.AddMethodFragment"
        android:id="@+id/addMethodFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
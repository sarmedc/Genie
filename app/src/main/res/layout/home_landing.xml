<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/homeScroll">

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@color/blue"
        android:isScrollContainer="true"
        android:weightSum="1">
        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/helloLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello,"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/Hello"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft = "20dp"
                    android:layout_marginTop = "10dp"/>

                <RelativeLayout
                    android:id="@+id/NameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:id="@+id/username"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/widget65"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageButton
                        android:background="@drawable/earth"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton"
                        android:layout_weight="1"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:background="@drawable/jupiter"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton2"
                        android:layout_weight="1"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:background="@drawable/mars"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton3"
                        android:layout_weight="1"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:background="@drawable/mercury"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton4"
                        android:layout_weight="1"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:background="@drawable/neptune"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton5"

                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:background="@drawable/saturn"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton6"

                        android:layout_weight="1"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >


                    <ImageButton
                        android:background="@drawable/uranus"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton7"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <ImageButton
                        android:background="@drawable/venus"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton8"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <ImageButton
                        android:background="@drawable/earth"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton9"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:background="@drawable/jupiter"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton10"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <ImageButton
                        android:background="@drawable/mars"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton11"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:background="@drawable/uranus"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/imageButton12"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>


                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="More Items!"
                android:background="@drawable/rounded_buttons"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/scrollButton"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.streetrats.genie.AddItemFragment"
    android:background="@color/blue">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add an Item:"
        android:id="@+id/addItem"
        android:layout_above="@+id/itemEditText"
        android:layout_centerHorizontal="true"
        android:textSize="48dp"/>

    <EditText
        android:background="@drawable/rounded_edittext"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/itemEditText"
        android:text="Item"
        android:layout_below="@+id/imageView"
        android:gravity = "center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:background="@drawable/rounded_edittext"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/URLeditText"
        android:text="URL"
        android:layout_gravity="center"
        android:gravity = "center"
        android:layout_below="@+id/itemEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:background="@drawable/rounded_edittext"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:inputType="textMultiLine"
        android:id="@+id/descriptionEditText"
        android:text="Description"
        android:gravity = "center"
        android:layout_below="@+id/URLeditText"
        android:layout_marginBottom="30dp" />

    <EditText
        android:background="@drawable/rounded_edittext"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/priceEditText"
        android:text="Price"
        android:layout_below="@+id/descriptionEditText"
        android:gravity = "center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"/>

    <Button
        android:background="@drawable/rounded_buttons"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/doneButton"
        android:layout_below="@+id/priceEditText"
        android:layout_alignLeft="@+id/addItem"
        android:layout_alignStart="@+id/addItem" />

    <Button
        android:background="@drawable/rounded_buttons"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Discard"
        android:id="@+id/discardButton"
        android:layout_alignTop="@+id/doneButton"
        android:layout_alignRight="@+id/addItem"
        android:layout_alignEnd="@+id/addItem" />
</RelativeLayout>

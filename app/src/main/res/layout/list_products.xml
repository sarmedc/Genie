<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_product"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/list_product_image"
            android:src="@drawable/genie_black"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/list_product_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Name"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:maxLines="3"
            android:layout_toRightOf="@id/list_product_image"
            android:layout_toLeftOf="@+id/product_delete_btn"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/product_delete_btn"
            android:src="@drawable/delete"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
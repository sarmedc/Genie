                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NoInternet"
            android:label="@string/title_activity_no_internet"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" >
